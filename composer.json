{
  "name": "avoskitchen/kirby-kitchen",
  "type": "kirby-plugin",
  "version": "1.0",
  "description": "",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "AvosKitchen\\Kitchen\\": "classes/"
    }
  },
  "authors": [
    {
      "name": "Fabian Michael",
      "email": "hallo@fabianmichael.de"
    }
  ],
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.5"
  },
  "require": {
    "php": ">=8.1.0",
    "getkirby/composer-installer": "^1.2.1",
    "getkirby/cms": "^4.1.0"
  },
  "extra": {
    "installer-name": "kitchen" 
  },
  "config": {
    "optimize-autoloader": true,
    "allow-plugins": {
      "getkirby/composer-installer": true
    }
  },
  "scripts": {
    "cs-fixer": "vendor/bin/php-cs-fixer fix --dry-run --diff",
    "cs-fixer-fix": "vendor/bin/php-cs-fixer fix --diff"
  }
}
